{
  "name": "shi-jian",
  "version": "0.0.0",
  "description": "The easiest way to work with dates in JavaScript and TypeScript.",
  "bugs": {
    "url": "https://github.com/AQian0/shi-jian/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AQian0/shi-jian.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "unpkg": "dist/bundle.mjs",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/bundle.d.mts",
        "default": "./dist/bundle.mjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "bunx tsdown",
    "test": "bunx vitest",
    "publint": "bunx publint",
    "size": "size-limit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/bun": "latest",
    "jiti": "^2.6.1",
    "oxfmt": "^0.18.0",
    "oxlint": "^1.33.0",
    "oxlint-tsgolint": "^0.9.1",
    "publint": "^0.3.16",
    "size-limit": "^12.0.0",
    "tsdown": "^0.18.1",
    "vitepress": "^2.0.0-alpha.15",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "keyword": [
    "date",
    "time",
    "date format"
  ]
}